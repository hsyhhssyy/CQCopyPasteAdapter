<Window x:Class="CQCopyPasteAdapter.HookChecker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        FontSize="20"
        mc:Ignorable="d"
        Title="HookChecker" Height="400" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Active window handle:" />
        <TextBlock x:Name="HandleTextBlock" />
        <TextBlock Text="Active window title:" />
        <TextBlock x:Name="TitleTextBlock" />
        <TextBlock Text="Active text box handle:" />
        <TextBlock x:Name="TextBoxHandleTextBlock" />
        <Button Content="Paste" Click="Button_Click"/>
    </StackPanel>
</Window>
