<Window x:Class="CQCopyPasteAdapter.Dialogs.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="映射频道" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="请输入一个频道Id:" Margin="10" FontSize="18" FontWeight="Bold"/>
        <TextBox Grid.Row="1" x:Name="inputTextBox" Margin="10" Height="40" Padding="10"/>
        <Button Grid.Row="2" Content="确定" IsDefault="True" Click="OkButton_Click" Margin="10" Height="50" Background="LightBlue" BorderBrush="Gray" BorderThickness="1" FontSize="16"/>
    </Grid>
</Window>